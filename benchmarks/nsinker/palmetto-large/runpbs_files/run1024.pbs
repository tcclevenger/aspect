#!/bin/bash                                                                                                      
#PBS -l select=64:ncpus=16:mpiprocs=16:chip_type=e5-2665:interconnect=fdr:mem=61gb                                   
#PBS -l walltime=2:00:00                                                                                            
#PBS -j oe                                                                                                          
#PBS -N test                                                                                                        
##PBS -q compmath                                                                                                   

# load profile and modules:                                                                                         
source /etc/profile.d/modules.sh
source ~/.bash_profile
source /home/heister/shared-dealii/modules_9.0.0pre1

ulimit -c 0

# compute processor count and print it:                                                                             
Nproc=`qstat -xf $PBS_JOBID | grep List.ncpus | sed 's/^.\{26\}//'`
cd $PBS_O_WORKDIR
echo "Job $PBS_JOBID started at `date` on `hostname` using $Nproc processors"
echo
echo

cd ../../


echo "MatrixFree, 4 sinkers, 1e4 visc jump"
for refinement in 6 7 8 9 10; do # 4 5 6 7
  cp global_mf.prm temp1024l.prm
   
  echo "set Number of timings = 0" >> temp1024l.prm

  echo "subsection Mesh refinement" >> temp1024l.prm
  echo "  set Initial global refinement = $refinement" >> temp1024l.prm
  echo "end" >> temp1024l.prm

  echo "set Output directory = output/large-global-${refinement}ref-1024" >> temp1024l.prm
  echo "set Timing output directory = timings-large/" >> temp1024l.prm

  mpirun -np $Nproc ./aspect temp1024l.prm
  rm temp1024l.prm
done

